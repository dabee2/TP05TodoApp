<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brand"
    tools:context=".IntroActivity">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Laziness Clinic"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:fontFamily="@font/dal"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="40dp"/>
    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="당신의 일정을 관리하세요"
        android:fontFamily="@font/dal"
        android:layout_below="@+id/tv"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/tv2"
        android:layout_marginTop="16dp"
        android:padding="30dp"
        android:src="@drawable/free_icon_animal_clinic3" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/images"
        app:civ_border_width="2dp"
        android:layout_centerHorizontal="true"
        app:civ_border_color="@color/brand_text"
        android:layout_above="@+id/et_name"
        android:layout_marginBottom="16dp"/>
    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button"
        android:hint="당신의 이름을 입력하세요"
        android:padding="12dp"
        android:fontFamily="@font/dal"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginHorizontal="40dp"
        android:layout_above="@id/btn"
        android:inputType="text"
        android:layout_marginBottom="24dp"/>
    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/brand_text"
        android:text="시작하기"
        android:textColor="@color/black"
        android:fontFamily="@font/dal"
        android:layout_marginHorizontal="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"/>



</RelativeLayout>